#include <stdio.h>
int main() {
    int files[50], index[50], n, i, j, start, len;
    for (i = 0; i < 50; i++) files[i] = 0;
    printf("Enter number of files: ");
    scanf("%d", &n);
    for (i = 0; i < n; i++) {
        printf("Enter start block and length of file %d: ", i + 1);
        scanf("%d%d", &start, &len);
        if (files[start] == 0) {
            for (j = start; j < start + len; j++) {
                if (files[j] == 0)
                    files[j] = 1;
                else
                    break;
            }
            if (j == start + len) {
                printf("File %d allocated from %d to %d\n", i + 1, start, start + len - 1);
                index[i] = start;
            } else
                printf("File %d cannot be allocated\n", i + 1);
        } else
            printf("File %d cannot be allocated\n", i + 1);
    }
    printf("File\tStart\n");
    for (i = 0; i < n; i++) printf("%d\t%d\n", i + 1, index[i]);
}
